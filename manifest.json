{
  "manifest_version": 2,

  "name": "HKGolden Notifier",
  "description": "This extension bookmarks hkgolden post and notify user when there are updates.",
  "version": "1.0",

  "browser_action": {
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "background": {
    "scripts": ["background.js"]
  },
  "permissions": [
	"tabs",
	"storage",
	"http://*.hkgolden.com/*"
  ]
}
